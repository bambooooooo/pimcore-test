<!doctype html>
<html lang="{{ app.request.locale }}" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <link rel="icon" type="image/png" href="/bundles/pimcoreadmin/img/favicon/favicon-32x32.png">
    <title>{{ title ?? "PIM - Megstyl" }}</title>
    <script
        src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        .nav-top
        {
            background: #222223;
            margin: 0;
            padding: 0;
        }

        .nav-link
        {
            color: #f8f8f8 !important;
        }

        .nav-link:hover
        {
            color: #ffffff;
        }
    </style>
</head>
<body>
<header class="sticky-top nav-top">
    <nav class="navbar navbar-expand-lg bd-navbar p-0 m-0">
        <div class="container">
            <a class="navbar-brand" href="{{ path('factory_home') }}">
                <img src="/LOGO/megstyl_logotyp.svg" height="32" alt="Bootstrap">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="background-image: url('/bundles/pimcoreadmin/img/flat-white-icons/menu.svg')"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    {% set menu = pimcore_object_by_path('/PORTALE/Factory') %}
                    {% for item in menu.items %}
                        <li class="nav-item">
                            {% if item.element is pimcore_asset %}
                                <a class="nav-link" href="{{ item }}">
                                    {{ item.element.key|capitalize }}
                                </a>
                            {% else %}
                                {% if item.element is pimcore_data_object_class('PortalMenu') %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle show" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                            {{ item.element.key|capitalize }}
                                        </a>
                                        <ul class="dropdown-menu" data-bs-popper="static">
                                            {% set submenu = pimcore_object(item.element.id) %}
                                            {% if submenu and submenu.items %}
                                                {% for sub_item in submenu.items %}
                                                    {% if sub_item.element is pimcore_asset %}
                                                        <li>
                                                            <a class="dropdown-item" href="{{ sub_item }}">
                                                                {{ sub_item.element.key|capitalize }}
                                                            </a>
                                                        </li>
                                                    {% else %}
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path("factory_tree", {id: sub_item.element.id}) }}">
                                                                {{ sub_item.element.key }}
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                        </ul>
                                    </li>
                                {% else %}
                                    <a class="nav-link" href="{{ path("factory_tree", {id: item.element.id}) }}">
                                        {{ item.element.key|capitalize }}
                                    </a>
                                {% endif %}
                            {% endif %}
                        </li>
                    {% endfor %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle show" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                            {{ "Factory"|trans }}
                            <img src="/bundles/pimcoreadmin/img/flat-white-icons/factory.svg" height="20" style="position: relative; top: -3px;" alt="Factory"/>
                        </a>
                        <ul class="dropdown-menu" data-bs-popper="static">
                            <li>
                                <a class="dropdown-item" href="{{ path("factory_schedule") }}">
                                    {{ "Schedule"|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("factory_search") }}">
                            <img src="/bundles/pimcoreadmin/img/flat-color-icons/search.svg" height="18">
                        </a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto">

            </div>

            <div class="me-3">
                {% if app.user %}
                    <a class="nav-link" href="{{ path("factory_account") }}">
                        {{ app.user.email }}
                        <img src="/bundles/pimcoreadmin/img/flat-white-icons/person.svg">
                    </a>
                {% else %}
                    <a class="nav-link" href="{{ path("factory_login") }}">
                        <img src="/bundles/pimcoreadmin/img/flat-white-icons/person.svg">
                    </a>
                {% endif %}
            </div>

            {% if app.user %}
                <a class="nav-link" href="{{ path("factory_logout") }}">
                    <img src="/bundles/pimcoreadmin/img/material-icons/outline-logout-24px.svg">
                </a>
            {% endif %}

        </div>
    </nav>
</header>
<main style="min-height: 100vh;">
    <div class="container">
        {{ block("content") ?? "" }}
    </div>
</main>
<footer>
    <div class="container-fluid pt-3 pb-3">
        <div class="row">
            <div class="col-12 text-center" style="font-size:11px">
                {{ "Copyright"|trans }} Â© MEGSTYL 2015-{{ "now"|date("Y") }}. {{ "All rights reserved"|trans }}.
            </div>
        </div>
    </div>
</footer>
</body>
</html>