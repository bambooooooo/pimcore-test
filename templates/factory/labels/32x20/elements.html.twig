<html>
<head>
    <style>
        html, body
        {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .page
        {
            width: 122px;
            height: 76px;
            box-sizing: border-box;
            padding: 4px;
            /*border: 1px solid black;*/
            font-size: 8px;
        }

        .content
        {
            text-align: center;
        }

    </style>
</head>
<body>

{% set step = min(copies, step) %}
{% set steps = (copies / step)|round(0, 'ceil') %}

{% for eli in package.Elements %}
    {% for i in range(1, steps) %}
    <div class="page" style="padding-top: 8px;">
        <div style="display: flex; align-items: center; justify-content: space-around;">
            {{ code_128(eli.element.id, "C128", 32, 1) }}
        </div>
        <div class="content">
            <div style="padding: 4px 0; font-size: 8px; font-weight: bold;">
                {{ eli.element.key|upper|replace({".PDF": ""}) }}
            </div>
            <div style="font-size: 6px">
                #{{ eli.element.id }}
            </div>
        </div>
    </div>
{% endfor %}
{% endfor %}
</body>
</html>
