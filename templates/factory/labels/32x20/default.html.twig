<html>
<head>
    <style>
        html, body
        {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .page
        {
            width: 122px;
            height: 76px;
            box-sizing: border-box;
            padding: 4px;
            border: 1px solid black;
            font-size: 8px;
        }

        .content
        {
            float: left;
            width: 42px;
            height: 64px;
            writing-mode: vertical-rl;
            text-orientation: sideways;
            transform: rotate(180deg);
            text-align: center;
            box-sizing: border-box;
        }

    </style>
</head>
<body>

{% set step = min(copies, step) %}
{% set steps = (copies / step)|round(0, 'ceil') %}

{% for i in range(1, steps) %}
    <div class="page">
        <div style="float: left; width: 50px; margin-right: 2px;">
            {% set packageUrl = app.request.server.get("REQUEST_SCHEME") ~ "://" ~ app.request.server.get("HTTP_HOST") ~ path("factory_tree", {id: package.id}) %}
            <img src="{{ qr_code_data_uri(packageUrl) }}" height="50"/>

        </div>
        <div class="content">
            <div style="font-size: 10px; margin-left: 4px; margin-right: 4px;">
                <strong>
                    {{ package.key }}
                </strong>
                <span style="font-size: 8px; font-style: italic">
                    #{{ package.id }}
                </span>
            </div>
            {% if product %}
                <div style="font-size: 6px;">
                    {{ product.key }}
                </div>
            {% endif %}
            <div style="font-size: 6px; margin-right: 3px">
                <div style="text-align: left; float:left;">
                    {{ min(i * step, copies) }} / {{ copies }}
                </div>
                <div style="text-align: right; float: right;">
                    {% if order %}
                        {{ "Serie"|trans }} {{ order.id }}
                    {% endif %}
                </div>
                <div style="clear: both;"></div>
            </div>
            <div style="font-size: 5px; text-align: left;">
                {{ "now"|date("H:m:s d.m.Y") }}
            </div>
        </div>
    </div>
{% endfor %}
</body>
</html>
