<div class="container-fluid">
    <div class="row">
        {% if obj.Image %}
            <div class="col-12 text-center">
                <a href="{{ obj.Image }}">
                    <img src="{{ obj.Image.thumbnail("200x200") }}" class="img-fluid"/>
                </a>
            </div>
        {% endif %}
        {% if obj.Images %}
        <div class="col-12 text-center">
            <div class="container-fluid">
                <div class="row" style="display: flex; justify-content: center">
                    {% for item in obj.Images %}
                        <div class="col-2">
                            <a href="{{ item }}">
                                {{ item.thumbnail("50x50").html|raw }}
                            </a>
                        </div>
                    {% endfor %}
                    {% for item in obj.ImagesModel %}
                        <div class="col-2">
                            <a href="{{ item }}">
                                {{ item.thumbnail("50x50").html|raw }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
        <div class="col-12 text-center">
            <h1>
                {{ obj.key }}
                <a target="_blank" href="/admin/login/deeplink?object_{{ obj.id }}_object">
                    <img height="40" src="/bundles/pimcoreadmin/img/flat-color-icons/input.svg"/>
                </a>
            </h1>
        </div>
        {% if app.user.product_show_baseprice %}
            <div class="col-12 text-center">
                tkw: {{ obj.BasePrice }}
            </div>
        {% endif %}
        <div class="col-12 text-center">
            <div>
                {% if obj.Name is defined and obj.Name %}
                    {{ obj.Name }}
                {% endif %}
            </div>
        </div>
        {% if obj.ObjectType == 'ACTUAL' %}
            <div class="col-12 text-center">
                {% if obj.Stock == 0 %}
                    <span class="badge text-bg-danger pt-2">
                        <img class="stock-indicator" src="{{ asset('bundles/pimcoreadmin/img/flat-white-icons/empty_battery.svg') }}"/>
                        {{ obj.Stock }} szt.
                    </span>

                {% elseif obj.Stock < 3 %}
                    <span class="badge text-bg-danger pt-2">
                        <img class="stock-indicator" src="{{ asset('bundles/pimcoreadmin/img/flat-white-icons/low_battery.svg') }}"/>
                        {{ obj.Stock }} szt.
                    </span>

                {% elseif obj.Stock < 10 %}
                    <span class="badge text-bg-warning pt-2">
                        <img class="stock-indicator" src="{{ asset('bundles/pimcoreadmin/img/flat-white-icons/middle_battery.svg') }}"/>
                        {{ obj.Stock }} szt.
                    </span>

                {% elseif obj.Stock < 30 %}
                    <span class="badge text-bg-success pt-2">
                        <img class="stock-indicator" src="{{ asset('bundles/pimcoreadmin/img/flat-white-icons/high_battery.svg') }}"/>
                        {{ obj.Stock }} szt.
                    </span>

                {% else %}
                    <span class="badge text-bg-success pt-2">
                        <img class="stock-indicator" src="{{ asset('bundles/pimcoreadmin/img/flat-white-icons/full_battery.svg') }}"/>
                        {{ obj.Stock }} szt.
                    </span>
                {% endif %}
            </div>
        {% endif %}
        <div class="col-12 text-center mt-2 mb-2" style="font-size: 18px">
            {% if obj.Width and obj.Width.Value %}
                <img src="/bundles/pimcoreadmin/img/flat-color-icons/right.svg" height="28"/>
                {{ obj.Width }}
            {% endif %}

            {% if obj.Height and obj.Height.Value %}
                <img src="/bundles/pimcoreadmin/img/flat-color-icons/up.svg" height="28"/>
                {{ obj.Height }}
            {% endif %}

            {% if obj.Depth and obj.Depth.Value %}
                <img src="/bundles/pimcoreadmin/img/flat-color-icons/right_up.svg" height="28"/>
                {{ obj.Depth }}
            {% endif %}
        </div>
        <div class="col-12 text-center">
            {% if obj.Group %}
                <a href="{{ path("factory_tree", {id: obj.Group.id}) }}" style="display: inline-block">
                    <div class="badge rounded-pill bg-primary">#{{ obj.Group.key }}</div>
                </a>
            {% endif %}

            {% if obj.Groups %}
                {% for g in obj.Groups %}
                    <a href="{{ path("factory_tree", {id: g.id}) }}" style="display: inline-block">
                        <div class="badge rounded-pill bg-primary">#{{ g.key }}</div>
                    </a>
                {% endfor %}
            {% endif %}
        </div>
        <div class="col-12">
            <div class="container-fluid">
                <div class="row">
                    {% if app.user.product_show_files %}
                        {% if obj.Instruction %}
                            <div class="col-12 mt-1">
                                <a href="{{ obj.Instruction }}">
                                    <div class="btn btn-outline-primary" style="width: 100%;">
                                        <img height="40" src="/bundles/pimcoreadmin/img/flat-color-icons/file-types.svg" class="card-img-top" alt="...">
                                        {{ "Assembly guide"|trans }}
                                    </div>
                                </a>
                            </div>
                        {% endif %}

                        {% if obj.InstructionUS %}
                            <div class="col-12 mt-1">
                                <a href="{{ obj.InstructionUS }}">
                                    <div class="btn btn-outline-primary" style="width: 100%;">
                                        <img height="40" src="/bundles/pimcoreadmin/img/flat-color-icons/file-types.svg" class="card-img-top" alt="...">
                                        {{ "Assembly guide (US)"|trans }}
                                    </div>
                                </a>
                            </div>
                        {% endif %}

                        {% if obj.Documents %}
                            {% for doc in obj.Documents %}
                                <div class="col-12 mt-1">
                                    <a href="{{ doc }}">
                                        <div class="btn btn-outline-primary" style="width: 100%;">
                                            <img height="40" src="/bundles/pimcoreadmin/img/flat-color-icons/file-types.svg" class="card-img-top" alt="...">
                                            {{ doc.key }}
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endif %}

